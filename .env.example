# USAJOBS API Key (Required)
# Get your API key from: https://developer.usajobs.gov/APIRequest
USAJOBS_API_KEY=your_api_key_here

# ETL Configuration
# Search keyword for job postings
SEARCH_KEYWORD=data engineering
# Maximum number of pages to fetch from API (each page = 500 jobs max)
MAX_PAGES=20

# PostgreSQL Database Credentials
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=usajobs
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# API Rate Limiting (Optional)
# Delay between API requests in seconds
API_DELAY=1.5
